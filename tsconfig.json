{
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "downlevelIteration": true,
    // TODO: Enable strictNullChecks and strictPropertyInitialization
    // "strictNullChecks": true,
    // "strictPropertyInitialization": true,
    "lib": [
      "es2021",
      "dom",
      "es6",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/bin/*"
  ]
}