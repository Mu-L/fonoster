{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"],
      "@theme/*": ["theme/*"],
      "@stories/*": ["stories/*"]
    }
  },
  "include": [
    "../stories/**/*.stories.ts",
    "../stories/**/*.stories.tsx",
    "../stories/**/*.stories.mdx",
    "../theme/**/*.ts",
    "../theme/**/*.tsx",
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": ["node_modules"]
} 